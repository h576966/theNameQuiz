<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thenamequiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheNameQuiz">
        <activity
            android:name=".activity.AddActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/Theme.TheNameQuiz.NoActionBar"></activity>
        <activity android:name=".PersonDetailsActivity" />
        <activity
            android:name=".activity.DatabaseActivity"
            android:label="Database"
            android:parentActivityName=".activity.MainActivity"
            />
        <activity
            android:name=".activity.QuizActivity"
            android:label="Quiz"
            android:parentActivityName=".activity.MainActivity"
            />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>